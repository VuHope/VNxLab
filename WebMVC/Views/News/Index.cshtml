@model NewsViewModel

<div class="container my-5">
    <div class="row">
        @if (Model != null && Model.ListNews.Any())
        {
            foreach (var news in Model.ListNews)
            {
                <div class="col-md-6 col-lg-4 mb-4 d-flex align-items-stretch">
                    <div class="card border-0 shadow-sm h-100 news-card">
                        <div class="image-container">
                            <img src="@news.NewsImage" alt="@news.Heading" class="card-img-top rounded-top" />
                        </div>

                        <div class="card-body d-flex flex-column p-4">
                            <h5 class="card-title font-weight-bold text-dark">@news.Heading</h5>
                            <p class="text-muted">
                                <small>@news.DatePublished.ToString("MMMM dd, yyyy")</small>
                            </p>
                            <p class="card-text description">@news.ShortDescription</p>
                        </div>

                        <div class="card-footer mt-auto p-4 text-start">
                            <a class="btn btn-read-more"
                               asp-area=""
                               asp-controller="News"
                               asp-action="DisplayOneNews"
                               asp-route-urlHandle="@news.UrlHandle">Read More</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    /* Thiết lập thẻ card */
    .news-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        height: 100%; /* Đảm bảo chiều cao bằng nhau */
    }

        .news-card:hover {
            transform: scale(1.02);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

    /* Định dạng hình ảnh */
    .image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease, brightness 0.3s ease;
        }

    /* Hiệu ứng hover cho ảnh */
    .news-card:hover .image-container img {
        transform: scale(1.1);
        filter: brightness(0.9);
    }

    /* Căn chỉnh mô tả và nội dung */
    .card-body {
        flex: 1; /* Tạo không gian để đẩy nút xuống cuối */
    }

    .card-text.description {
        font-size: 0.95rem;
        color: #555;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3; /* Giới hạn tối đa 3 dòng */
        -webkit-box-orient: vertical;
    }

    /* Nút Read More */
    .btn-read-more {
        color: #007bff;
        border: 1px solid #007bff;
        transition: all 0.3s ease;
        padding: 0.4rem 0.8rem;
    }

        .btn-read-more:hover {
            background-color: #007bff;
            color: #fff;
        }

    /* Định dạng thẻ footer để đảm bảo căn chỉnh nút Read More */
    .card-footer {
        padding-top: 1rem;
        margin-top: auto;
    }
</style>


