@model List<News>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">News List</h2>
            </div>
        </div>
    </div>
    <div class="col-4">
        <a class="btn btn-primary w-100"
           asp-controller="News"
           asp-action="Create">
            Add News
        </a>
    </div>
    <div class="card-body py-4">
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <tr class="table-secondary text-center">
                    <th>Id</th>
                    <th>Tiêu đề</th>
                    <th>Ngày tạo</th>
                    <th>Hành động</th>
                </tr>
                @foreach (var news in Model)
                {
                    <tr>
                        <td>@news.Id</td>
                        <td>@news.Heading</td>
                        <td>@news.DatePublished.ToString("dd/MM/yyyy")</td>
                        <td style="width:450px;">
                            <div class="row">
                                <div class="col-4">
                                    <a asp-area="" asp-controller="News" asp-action="Update" asp-route-Id="@news.Id" class="btn btn-warning w-100" style="cursor:pointer">
                                        Update
                                    </a>
                                </div>
                                <div class="col-4">
                                    <form asp-controller="News" asp-action="Delete" asp-route-id="@news.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger w-100">Delete</button>
                                    </form>
                                </div>
                                
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>