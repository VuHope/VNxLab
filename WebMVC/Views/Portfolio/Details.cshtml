@{
}
@model PortfolioWebsite.Models.Portfolio

<style>
    .container {
        margin-top: 50px;
        max-width: 800px;
    }

    h2 {
        font-weight: 700;
        color: #333;
    }

    .portfolio-category {
        color: #888;
        font-size: 1rem;
        margin-bottom: 15px;
    }

    .portfolio-image {
        width: 100%;
        height: auto;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .portfolio-video {
        width: 100%;
        height: 400px;
        border-radius: 5px;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }
</style>

<div class="container">
    <h2>@Model.Title</h2>
    <p>@Model.Description</p>
    <p><strong>Độ phổ biến:</strong> @Model.Popularity</p>
    <div>
        <h4>Hình ảnh:</h4>
        @foreach (var image in Model.Images)
        {
            <img src="@image" class="portfolio-image" alt="Ảnh minh họa">
        }
    </div>
    @if (!string.IsNullOrEmpty(Model.VideoUrl))
    {
        <h4>Video:</h4>
        <iframe src="@Model.VideoUrl" class="portfolio-video" frameborder="0" allowfullscreen></iframe>
    }
    <a asp-action="Edit" asp-controller="Portfolio" asp-route-id="@Model.Id" class="button-link">Chỉnh sửa</a>

    <form asp-action="Delete" asp-controller="Portfolio" asp-route-id="@Model.Id" method="post" style="display:inline;">
        <button type="submit" class="button-link" style="background-color: #dc3545;">Xóa</button>
    </form>

    <a asp-action="Index" asp-controller="Portfolio" class="button-link" style="background-color: #6c757d;">Quay lại danh sách</a>
</div>
