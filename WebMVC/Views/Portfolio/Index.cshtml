@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "User Portfolio";
}

<div class="container my-5">
    <div>
        <h1 class="text-center mb-5" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Portfolios</h1>
    </div>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <div class="col-md-3 col-lg-3 mb-4 d-flex align-items-stretch">
                    <div class="card h-100 user-card">
                        <div class="image-container">
                            <a asp-controller="Portfolio" asp-action="UserPortfolio" asp-route-userId="@user.Id">
                                <img src="@user.ProfilePictureUrl" alt="Profile Picture" class="card-img-top rounded-circle" style="width: 100px; height: 100px; object-fit: cover; margin: 10px auto;" />
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column text-center">
                            <h5 class="card-title font-weight-bold text-dark">
                                <a asp-controller="Portfolio" asp-action="UserPortfolio" asp-route-userId="@user.Id" class="text-dark no-underline">
                                    @user.FullName
                                </a>
                            </h5>
                            <p class="text-muted mb-1">@user.Email</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No users found.</p>
        }
    </div>
</div>


<style>
    .user-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        width: 100%;
        overflow: hidden;
        background-color: #f8f9fa;
        box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
        border: none;
    }

        .user-card:hover {
            transform: scale(1.02);
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.15);
        }

    .image-container {
        width: 100%;
        height: auto;
        padding-top: 20px;
        text-align: center;
    }

        .image-container img {
            width: 100px;
            height: 100px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #ffffff; /* Inner white border */
            box-shadow: 0 0 0 1px #b0b8c1; /* Outer lighter border */
            transition: transform 0.2s ease, brightness 0.2s ease;
        }

    .user-card:hover .image-container img {
        transform: scale(1.05);
        filter: brightness(0.95);
    }

    .card-body {
        flex: 1;
        padding: 1.5rem;
        text-align: center;
        color: #495057;
    }

    .card-title {
        font-size: 1.15rem;
        font-weight: 600;
        color: #343a40;
    }

        .card-title a {
            text-decoration: none;
            color: inherit;
        }

            .card-title a:hover {
                color: #6c757d;
            }

    .text-muted {
        color: #adb5bd;
        font-style: italic;
    }

    h1 {
        color: #495057;
        font-weight: 500;
    }

    .container {
        max-width: 1200px;
    }
</style>




