@{
}
@model IEnumerable<Portfolio>

<h1>Danh mục Portfolio</h1>

<form method="get" action="/Portfolio/Index">
    <label for="category">Lọc theo lĩnh vực:</label>
    <input type="text" name="category" placeholder="Nhập lĩnh vực...">

    <label for="sortByPopularity">Sắp xếp theo độ phổ biến:</label>
    <input type="checkbox" name="sortByPopularity" value="true">

    <button type="submit">Lọc</button>
</form>

@foreach (var portfolio in Model)
{
    <div>
        <h2>@portfolio.Title</h2>
        <p>@portfolio.Description</p>
        <a href="/Portfolio/Details/@portfolio.Id">Xem chi tiết</a>
    </div>
}

