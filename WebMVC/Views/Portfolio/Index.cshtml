@model IEnumerable<ApplicationUser>

@{
    ViewData["Title"] = "User Portfolio";
}

<div class="container my-5">
    <div>
        <h1 class="text-center mb-5" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Portfolios</h1>
    </div>
    <div class="row">
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <div class="col-md-3 col-lg-3 mb-4 d-flex align-items-stretch">
                    <div class="card h-100 user-card">
                        <div class="image-container">
                            <a asp-controller="Portfolio" asp-action="UserPortfolio" asp-route-userId="@user.Id">
                                <img src="@user.ProfilePictureUrl" alt="Profile Picture" class="card-img-top rounded-circle" style="width: 100px; height: 100px; object-fit: cover; margin: 10px auto;" />
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column text-center">
                            <h5 class="card-title font-weight-bold text-dark">
                                <a asp-controller="Portfolio" asp-action="UserPortfolio" asp-route-userId="@user.Id" class="text-dark no-underline">
                                    @user.FullName
                                </a>
                            </h5>
                            <p class="text-muted mb-1">@user.Email</p>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No users found.</p>
        }
    </div>
</div>

<style>
    .user-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        width: 100%;
        overflow: hidden;
        border: 1px solid #f0f0f0; 
    }

        .user-card:hover {
            transform: scale(1.03);
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

    .image-container {
        width: 100%;
        height: auto;
        padding-top: 20px;
        text-align: center;
    }

    .card-title a {
        text-decoration: none;
    }

        .card-title a:hover {
            text-decoration: none;
        }

    .card-body .text-muted {
        color: #6c757d;
        font-style: italic;
    }
</style>


