@model UserProfileViewModel

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg p-4">
                <h2 class="text-center">User Profile</h2>
                
                <!-- Profile Picture -->
                <div class="text-center mb-4">
                    <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="rounded-circle"
                         style="width: 150px; height: 150px; object-fit: cover; border: 5px solid #ddd;">
                </div>

                <form asp-action="DisplayUserProfile"  method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="Id" />

                    <!-- File Upload -->
                    <div class="form-group">
                        <label class="form-label">Upload New Profile Picture</label>
                        <input type="file" name="file" class="form-control" />
                    </div>

                    <!-- Full Name -->
                    <div class="form-group">
                        <label asp-for="FullName" class="form-label">Full Name</label>
                        <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <!-- Email (readonly) -->
                    <div class="form-group">
                        <label asp-for="Email" class="form-label">Email</label>
                        <input asp-for="Email" class="form-control" readonly />
                    </div>

                    <!-- Gender -->
                    <div class="form-group">
                        <label asp-for="Gender" class="form-label">Gender</label>
                        <select asp-for="Gender" class="form-control">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Other">Other</option>
                        </select>
                    </div>

                    <!-- Phone Number -->
                    <div class="form-group">
                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter your phone number" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>

                    </div>

                    <!-- Address -->
                    <div class="form-group">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input asp-for="Address" class="form-control" placeholder="Enter your address" />
                    </div>

                    <!-- City -->
                    <div class="form-group">
                        <label asp-for="City" class="form-label">City</label>
                        <input asp-for="City" class="form-control" placeholder="Enter your city" />
                    </div>

                    <!-- Country -->
                    <div class="form-group">
                        <label asp-for="Country" class="form-label">Country</label>
                        <input asp-for="Country" class="form-control" placeholder="Enter your country" />
                    </div>

                    <!-- Submit Button -->
                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-primary px-5">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .container {
        max-width: 800px;
    }
    .card {
        border: none;
        border-radius: 15px;
    }
    .form-label {
        font-weight: bold;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #0056b3;
    }
</style>
