@model ProductViewModel

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Update Product - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="ResearchProduct.Id" hidden />
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input type="text" class="form-control" id="Title" asp-for="ResearchProduct.Title" />
        </div>

        <div class="mb-3">
            <label class="form-label">Summary</label>
            <textarea class="form-control" id="Summary" asp-for="ResearchProduct.Summary"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Content</label>
            <input type="text" class="form-control" id="content" asp-for="ResearchProduct.Content" />
        </div>

        <div>
            @foreach (var category in Model.Categories)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedCategoryIds" value="@category.Id"
                    @(Model.SelectedCategoryIds.Contains(category.Id) ? "checked" : "") />
                    <label class="form-check-label" for="category-@category.Id">
                        @category.Name
                    </label>
                </div>
            }
        </div>

        <div class="mb-3">
            <label class="form-label">URL Handle</label>
            <input type="text" class="form-control" id="urlHandle" asp-for="ResearchProduct.UrlHandle" />
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="ResearchProduct.CoverImg"></label>
            <input type="file" name="file" class="form-control" />

            <img src="@Url.Content(Model.ResearchProduct.CoverImg)" style="width: 200px; height: 200px;" />
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-dark">
                Save
            </button>
        </div>
    </form>
</div>
@section Scripts {
    <script>
        var editor = new FroalaEditor('#content');
    </script>
}