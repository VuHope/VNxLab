@model ProductViewModel

<div class="container my-5">
    <div>
        <h1 class="text-center mt-0" style="font-family:'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif">Welcome</h1>
    </div>
    <div class="row align-items-center mb-4">

        <div class="col-6">
            <h3 class="mb-0">All research products</h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-controller="Product" asp-action="MyWorks">My Works</a>
        </div>
    </div>
    <div class="row">
        @if (Model != null && Model.ListResearchProduct.Any())
        {
            foreach (var product in Model.ListResearchProduct)
            {
                <div class="col-md-3 col-lg-3 mb-4 d-flex align-items-stretch">
                    <div class="card border-0 shadow-sm h-100 product-card">
                        <div class="image-container">
                            <a asp-area=""
                               asp-controller="Product"
                               asp-action="DisplayProductImagesReadOnly" asp-route-id="@product.Id">
                                <img src="@product.CoverImg" class="card-img-top rounded-top" />
                            </a>
                        </div>

                        <div class="card-body d-flex flex-column p-4">
                            <h5 class="card-title font-weight-bold text-dark">
                                <a asp-area=""
                                   asp-controller="Product"
                                   asp-action="DisplayProductImagesReadOnly" asp-route-id="@product.Id"
                                   class="text-dark">
                                    @product.Title
                                </a>
                            </h5>
                            <p class="text-muted">
                                <small>@product.CreatedAt.ToString("MMMM dd, yyyy")</small>
                            </p>
                            <p class="card-text description">@product.Summary</p>
                            <p class="text-muted">
                                <small>Author: @ViewData[$"AuthorEmail_{product.Id}"]</small>
                            </p>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .product-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border-radius: 8px;
        display: flex;
        flex-direction: column;
        width: 100%; /* Đảm bảo chiều ngang bằng nhau */
        height: 400px; /* Đảm bảo chiều cao bằng nhau - điều chỉnh giá trị theo nhu cầu */
        overflow: hidden; /* Cắt ảnh dư */
    }

        .product-card:hover {
            transform: scale(1.02);
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.2);
        }

    /* Định dạng hình ảnh */
    .image-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

        .image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease, brightness 0.3s ease;
        }

    /* Hiệu ứng hover cho ảnh */
    .product-card:hover .image-container img {
        transform: scale(1.1);
        filter: brightness(0.9);
    }

    /* Căn chỉnh mô tả và nội dung */
    .card-body {
        flex: 1; /* Tạo không gian để đẩy nút xuống cuối */
    }

    .card-text.description {
        font-size: 0.95rem;
        color: #555;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box;
        -webkit-line-clamp: 3; /* Giới hạn tối đa 3 dòng */
        -webkit-box-orient: vertical;
    }

    .card-title a {
        text-decoration: none;
    }

        .card-title a:hover {
            text-decoration: none; 
        }

    .card-body .text-muted small {
    color: #6c757d;
    font-style: italic;
}
</style>


