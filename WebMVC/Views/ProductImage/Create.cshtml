@model Models.Entity.ProductImage

<div class="container my-5">
    <h2>Add New Product Image</h2>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="ImagePath">Upload Image</label>
            <input type="file" asp-for="ImagePath" class="form-control" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>
        <input type="hidden" asp-for="ProductId" />
        <button type="submit" class="btn btn-primary mt-3">Save</button>
        <a asp-action="ListByProduct" asp-route-productId="@Model.ProductId" class="btn btn-secondary mt-3">Cancel</a>
    </form>
</div>
