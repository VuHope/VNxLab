@model IEnumerable<ResearchProduct>

@{
    ViewData["Title"] = "Home Page";
}

<div class="d-flex flex-column align-items-center">
    <div class="main-page-title text-center">
        <p>@ViewData["TheWorld"]</p>
        <p style="color: cadetblue">@ViewData["BestCreator"]</p>
        <p>@ViewData["AreRight"]</p>
    </div>
    <div class="main-page-content w-50 text-center faded-text mt-5">
        <p>@ViewData["HomeSmallText"]</p>
    </div>
    <div class="button-group mt-3">
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-2 ms-3">@ViewData["HomeButtonProduct"]</a>
        <a asp-controller="Account" asp-action="Register" class="btn btn-secondary mt-2 ms-3">@ViewData["HomeButtonAuthor"]</a>
    </div>

    <div id="carouselExample" class="carousel slide mt-5 w-100" data-bs-ride="carousel" data-bs-interval="500">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/images/share/greenbook.jpg" class="d-block w-100 fixed-height" alt="Slide 1">
            </div>
            <div class="carousel-item">
                <img src="~/images/share/Yellow Sunflower Closeup.jpg" class="d-block w-100 fixed-height" alt="Slide 2">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
    <div class="research-products mt-5 w-100">
        <h2 class="text-center">Research Products</h2>
        <div class="row">
            @foreach (var product in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 d-flex flex-column">
                        <div class="card-img-container">
                            <img src="@product.CoverImg" class="card-img-top" alt="@product.Title">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Title</h5>
                            <p class="card-text flex-grow-1">@product.Summary</p>
                            <a href="@Url.Action("DisplayProductImagesReadOnly", "Product", new { id = product.Id })" class="btn btn-primary mt-auto">Read More</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

<style>
    .main-page-title {
        font-size: 100px;
        font-family: 'Goudy Old Style', sans-serif;
        line-height: 0.8;
        padding-top: 100px;
    }

    .main-page-content {
        font-size: 22px;
        font-weight: lighter;
    }

    .faded-text {
        color: rgba(0, 0, 0, 0.5); 
    }

    .button-group {
        display: flex;
        justify-content: center;
    }

    .carousel-inner .fixed-height {
        height: 800px; /* Chiều cao cố định, có thể thay đổi tùy ý */
        object-fit: cover; /* Đảm bảo ảnh phủ kín và cắt phần thừa nếu cần */
    }
    /* Đảm bảo ảnh có kích thước cố định */
    .card-img-container {
        height: 200px; /* Điều chỉnh chiều cao theo ý muốn */
        overflow: hidden;
    }

    .card-img-top {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    /* Đảm bảo thẻ card có chiều cao cố định và căn thẳng hàng */
    .card-body {
        display: flex;
        flex-direction: column;
    }

    .card-title, .card-text, .btn {
        margin-bottom: 10px;
    }

</style>


@section Scripts {
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
}