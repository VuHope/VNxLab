@model IEnumerable<Models.Entity.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-success bg-gradient m-lg-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Category list</h2>
            </div>
        </div>
    </div>
    <div class="card-body py-4">
        <div class="row mb-3">
            <div class="col-12 text-end">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                    Add Category
                </a>
            </div>
        </div>
        @if (Model.Count() > 0)
        {
            <table class="table table-bordered table-striped">
                <tr class="table-secondary text-center">
                    <th>Id</th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td style="width:450px;">
                            <div class="row">
                                <div class="col-6">
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-primary w-100" style="cursor:pointer">
                                        Update
                                    </a>
                                </div>
                                <div class="col-6">
                                    <form asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                        <button type="submit" class="btn btn-danger w-100">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </table>
        }
    </div>
</div>