@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}

<style>
    .forgot-password-container {
        max-width: 500px;
        margin: auto;
        padding: 20px;
    }
    .forgot-password-title {
        font-size: 2rem;
        font-weight: bold;
    }
    .form-control {
        height: calc(2.25rem + 10px);
    }
    .btn-submit {
        font-size: 1rem;
        font-weight: bold;
        padding: 10px 20px;
    }
</style>

<div class="forgot-password-container">
    <h1 class="forgot-password-title text-primary text-center pb-3">Forgot your Password</h1>
    <form method="post" asp-controller="Account" asp-action="ForgotPassword">
        <div class="border p-4 rounded shadow-sm bg-white">
            <p class="text-center fs-5">Enter your email to reset your password.</p>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-4">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success btn-submit w-100 mb-3">Submit</button>

            <div class="text-center">
                <a asp-action="Login" class="text-primary">Back to Login</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
