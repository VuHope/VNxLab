@model RegisterViewModel

<style>
    .register-container {
        max-width: 500px;
        margin: auto;
        padding: 20px;
    }

    .register-title {
        font-size: 2rem;
        font-weight: bold;
    }

    .form-control {
        height: calc(2.25rem + 10px);
    }

    .btn-register {
        font-size: 1rem;
        font-weight: bold;
        padding: 10px 20px;
    }
</style>

<div class="register-container">
    <h1 class="register-title text-primary text-center pb-3">Register</h1>
    <form method="post" asp-controller="Account" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">
        <div class="border p-4 rounded shadow-sm bg-white">
            <p class="text-center fs-5">Create Account</p>
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="form-group mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="FullName" class="form-label">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success btn-register w-100 mb-3">Register</button>

            <div class="text-center">
                <a asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" class="text-primary">Already have an account? Login</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}